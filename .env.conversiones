# Configuración del microservicio Conversiones
# Variables de entorno para descentralización completa

# Base de datos descentralizada para Conversiones
CONVERSIONES_DATABASE_URL=mysql://alpes:alpes@localhost:3307/alpes_conversiones

# Configuración del microservicio
CONVERSIONES_SERVICE_NAME=conversiones
CONVERSIONES_SERVICE_VERSION=1.0.0
CONVERSIONES_API_PREFIX=/api/v1/conversiones

# Configuración de logging
CONVERSIONES_LOG_LEVEL=INFO
CONVERSIONES_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Configuración de Pulsar para eventos descentralizados
CONVERSIONES_PULSAR_TENANT=alpes
CONVERSIONES_PULSAR_NAMESPACE=conversiones
CONVERSIONES_PULSAR_TOPIC_PREFIX=conversiones

# Topics específicos para eventos de Conversiones
CONVERSIONES_TOPIC_CREATED=conversiones.created
CONVERSIONES_TOPIC_CONFIRMED=conversiones.confirmed
CONVERSIONES_TOPIC_REJECTED=conversiones.rejected
CONVERSIONES_TOPIC_CANCELLED=conversiones.cancelled

# Configuración del outbox descentralizado
CONVERSIONES_OUTBOX_POLL_INTERVAL=5
CONVERSIONES_OUTBOX_BATCH_SIZE=100
CONVERSIONES_OUTBOX_MAX_RETRIES=3
CONVERSIONES_OUTBOX_RETRY_DELAY=30

# Configuración de health checks
CONVERSIONES_HEALTH_CHECK_TIMEOUT=5
CONVERSIONES_HEALTH_CHECK_INTERVAL=30

# Configuración de correlación para cross-microservicio
CONVERSIONES_CORRELATION_HEADER=X-Correlation-ID
CONVERSIONES_CAUSATION_HEADER=X-Causation-ID